{
  "name": "jqapi",
  "version": "3.0.0",
  "description": "Alternative jQuery Documentaion Browser",
  "main": "index.js",
  "scripts": {
    "update": "node tasks/update.js",
    "update-daemon": "node tasks/update.js --daemon",
    "copy-html": "cp src/*.html public",
    "dev-server": "browser-sync start --serveStatic public --files public/build.*",
    "build-js": "browserify -e src/index.js > public/build.js",
    "watch-js": "watchify src/index.js -v -o public/build.js",
    "build-css": "stylus -u autoprefixer-stylus --include-css --include src < src/index.styl > public/build.css",
    "watch-css": "chokidar src/**/*.styl -c 'npm run build-css'",
    "test-lib": "mocha test/lib/**/*_spec.js",
    "test-frontend": "karma start karma.conf.js",
    "test-frontend-single-run": "karma start karma.conf.js --single-run",
    "start": "npm run copy-html & npm run dev-server & npm run watch-js & npm run watch-css",
    "test": "npm run test-lib && npm run test-frontend-single-run",
    "lint": "standard"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mustardamus/jqapi.git"
  },
  "keywords": [
    "jquery",
    "documentation",
    "browser",
    "docs"
  ],
  "author": "Sebastian Senf <me@akrasia.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mustardamus/jqapi/issues"
  },
  "homepage": "https://github.com/mustardamus/jqapi#readme",
  "devDependencies": {
    "autoprefixer-stylus": "^0.11.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.2",
    "browserify": "^13.1.1",
    "chokidar-cli": "^1.2.0",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-spec-reporter": "0.0.26",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6",
    "standard": "^8.6.0",
    "stylus": "^0.54.5"
  },
  "dependencies": {
    "cheerio": "^0.22.0",
    "fs-extra": "^1.0.0",
    "glob": "^7.1.1",
    "jquery": "^3.1.1",
    "lodash": "^4.17.2",
    "shelljs": "^0.7.5"
  }
}
